<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:gravity="bottom">

    <!-- Transparent spacer to push content to bottom -->
    <View
        android:id="@+id/transparent_spacer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true" />

    <!-- Actual menu content anchored at bottom -->
    <LinearLayout
        android:id="@+id/menu_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurfaceOverlay"
        android:paddingBottom="16dp">

        <!-- Drag Handle -->
        <View
            android:id="@+id/drag_handle"
            android:layout_width="@dimen/bottom_sheet_handle_width"
            android:layout_height="@dimen/bottom_sheet_handle_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/bottom_sheet_handle_margin_top"
            android:background="?attr/colorOutline"
            android:contentDescription="@string/menu_handle_description" />

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/menu_item_padding_horizontal"
            android:layout_marginTop="@dimen/bottom_sheet_title_margin_top"
            android:layout_marginBottom="@dimen/bottom_sheet_title_margin_bottom">

            <TextView
                android:id="@+id/menu_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/game_menu_title"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textColor="?attr/colorOnSurface" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/close_button"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_close_24"
                app:iconTint="?attr/colorOnSurface"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="@string/menu_close_button_description" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
                android:background="?attr/colorOutlineVariant"
            android:layout_marginHorizontal="@dimen/menu_item_padding_horizontal" />

        <!-- Menu Items RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menu_items_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

    </LinearLayout>

</LinearLayout>
