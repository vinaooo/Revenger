<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ======================================================================
         OPTIMAL SETTINGS SWITCH
         When true: gameplay config is loaded from optimal_settings.json
         When false: gameplay config is loaded from config_manual.xml
         ====================================================================== -->
    <bool name="conf_optimal_settings">true</bool>

    <!-- Platform identifier (e.g., sms, snes, gba, gb, md, nes, gbc)
         Used as fallback when ROM extension is ambiguous (.bin, .rom)
         Ignored when conf_optimal_settings is false -->
    <string name="conf_platform"></string>

    <!-- ======================================================================
         IDENTITY & BUILD SETTINGS
         These are always read from this file, regardless of optimal_settings.
         ====================================================================== -->

    <!-- Display name -->
    <string name="conf_name">NÃ£o jogar</string>

    <!-- LibRetro core (excluding _libretro_android.so)
         Used by Gradle to download the core.
         When conf_optimal_settings=true this is auto-resolved from the
         optimal profile; this value serves only as a documentation hint.
         Snes = snes9x | megadrive = genesis_plus_gx | gb = gambatte
         master = smsplus | gba = mgba | nes = nestopia -->
    <string name="conf_core">picodrive</string>

    <!-- ROM filename (placed in roms_backup/ and staged automatically) -->
    <string name="conf_rom">Sonic The Hedgehog (USA, Europe, Brazil) (En) (2).sms</string>

    <!-- Target ABI: x86, x86_64, armeabi-v7a, arm64-v8a, or all -->
    <string name="conf_target_abi">arm64-v8a</string>

    <!-- Load ROM directly into memory; disable for larger games -->
    <bool name="conf_load_bytes">false</bool>
</resources>
