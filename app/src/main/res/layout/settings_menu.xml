<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Left 25% - Empty Space -->
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/retro_menu3_side_space_weight" />

        <!-- Center 50% - Menu Content -->
        <LinearLayout
            android:id="@+id/settings_menu_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/retro_menu3_center_content_weight"
            android:orientation="vertical"
            android:paddingVertical="@dimen/retro_menu3_container_padding_vertical">

            <!-- Menu Title -->
            <TextView
                android:id="@+id/settings_menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_menu_title"
                android:textSize="@dimen/retro_menu3_title_text_size"
                android:textColor="@color/retro_menu3_text_color"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/retro_menu3_title_margin_bottom"
                android:letterSpacing="@dimen/retro_menu3_title_letter_spacing"
                
                android:shadowColor="@color/retro_menu3_shadow_color"
                android:shadowDx="@dimen/retro_menu3_shadow_dx"
                android:shadowDy="@dimen/retro_menu3_shadow_dy"
                android:shadowRadius="@dimen/retro_menu3_shadow_radius" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="false"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:fadeScrollbars="false"
                android:clipToPadding="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Sound -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/settings_sound"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/retro_menu3_menu_item_height"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="@dimen/retro_menu3_menu_item_corner_radius"
                        app:cardElevation="@dimen/retro_menu3_menu_item_elevation"
                        app:strokeWidth="@dimen/retro_menu3_menu_item_stroke_width"
                        app:strokeColor="@color/retro_menu3_card_stroke"
                        app:cardBackgroundColor="@color/retro_menu3_card_background">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/retro_menu3_menu_item_padding">
                            <TextView
                                android:id="@+id/selection_arrow_sound"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/retro_menu3_selection_arrow"
                                android:textSize="@dimen/retro_menu3_arrow_text_size"
                                android:textColor="@color/retro_menu3_text_color"
                                
                                android:layout_marginStart="0dp"
                                android:padding="0dp"
                                android:includeFontPadding="false"
                                android:visibility="gone"
                                android:shadowColor="@color/retro_menu3_shadow_color"
                                android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/sound_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/audio_on"
                                    android:textSize="@dimen/retro_menu3_menu_item_text_size"
                                    android:textColor="@color/retro_menu3_text_color"
                                    
                                    android:shadowColor="@color/retro_menu3_shadow_color"
                                    android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                    android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                    android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Shader -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/settings_shader"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/retro_menu3_menu_item_height"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="@dimen/retro_menu3_menu_item_corner_radius"
                        app:cardElevation="@dimen/retro_menu3_menu_item_elevation"
                        app:strokeWidth="@dimen/retro_menu3_menu_item_stroke_width"
                        app:strokeColor="@color/retro_menu3_card_stroke"
                        app:cardBackgroundColor="@color/retro_menu3_card_background">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/retro_menu3_menu_item_padding">
                            <TextView
                                android:id="@+id/selection_arrow_shader"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/retro_menu3_selection_arrow"
                                android:textSize="@dimen/retro_menu3_arrow_text_size"
                                android:textColor="@color/retro_menu3_text_color"

                                android:layout_marginStart="0dp"
                                android:padding="0dp"
                                android:includeFontPadding="false"
                                android:visibility="gone"
                                android:shadowColor="@color/retro_menu3_shadow_color"
                                android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/shader_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Shader: Sharp"
                                    android:textSize="@dimen/retro_menu3_menu_item_text_size"
                                    android:textColor="@color/retro_menu3_text_color"

                                    android:shadowColor="@color/retro_menu3_shadow_color"
                                    android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                    android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                    android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Game Speed -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/settings_game_speed"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/retro_menu3_menu_item_height"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="@dimen/retro_menu3_menu_item_corner_radius"
                        app:cardElevation="@dimen/retro_menu3_menu_item_elevation"
                        app:strokeWidth="@dimen/retro_menu3_menu_item_stroke_width"
                        app:strokeColor="@color/retro_menu3_card_stroke"
                        app:cardBackgroundColor="@color/retro_menu3_card_background">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/retro_menu3_menu_item_padding">
                            <TextView
                                android:id="@+id/selection_arrow_game_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/retro_menu3_selection_arrow"
                                android:textSize="@dimen/retro_menu3_arrow_text_size"
                                android:textColor="@color/retro_menu3_text_color"
                                
                                android:layout_marginStart="0dp"
                                android:padding="0dp"
                                android:includeFontPadding="false"
                                android:visibility="gone"
                                android:shadowColor="@color/retro_menu3_shadow_color"
                                android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/game_speed_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/fast_forward_inactive"
                                    android:textSize="@dimen/retro_menu3_menu_item_text_size"
                                    android:textColor="@color/retro_menu3_text_color"
                                    
                                    android:shadowColor="@color/retro_menu3_shadow_color"
                                    android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                    android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                    android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Back -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/settings_back"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/retro_menu3_menu_item_height"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="@dimen/retro_menu3_menu_item_corner_radius"
                        app:cardElevation="@dimen/retro_menu3_menu_item_elevation"
                        app:strokeWidth="@dimen/retro_menu3_menu_item_stroke_width"
                        app:strokeColor="@color/retro_menu3_card_stroke"
                        app:cardBackgroundColor="@color/retro_menu3_card_background">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/retro_menu3_menu_item_padding">
                            <TextView
                                android:id="@+id/selection_arrow_back"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/retro_menu3_selection_arrow"
                                android:textSize="@dimen/retro_menu3_arrow_text_size"
                                android:textColor="@color/retro_menu3_text_color"
                                
                                android:layout_marginStart="0dp"
                                android:padding="0dp"
                                android:includeFontPadding="false"
                                android:visibility="gone"
                                android:shadowColor="@color/retro_menu3_shadow_color"
                                android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/back_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/settings_back"
                                    android:textSize="@dimen/retro_menu3_menu_item_text_size"
                                    android:textColor="@color/retro_menu3_text_color"
                                    
                                    android:shadowColor="@color/retro_menu3_shadow_color"
                                    android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                    android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                    android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Extra space for last item -->
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/retro_menu3_extra_space_height" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <!-- Right 25% - Empty Space -->
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/retro_menu3_side_space_weight" />

    </LinearLayout>

</FrameLayout>