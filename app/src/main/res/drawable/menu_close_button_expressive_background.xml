<?xml version="1.0" encoding="utf-8"?>
<!-- Material 3 Expressive Button Background -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/md_theme_on_primary">
    <item>
        <layer-list>
            <!-- Button base with primary color -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/md_theme_primary" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            <!-- Gaming gradient overlay -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="135"
                        android:startColor="#40FFFFFF"
                        android:centerColor="#20FFFFFF"
                        android:endColor="#00FFFFFF" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            <!-- Subtle glow border -->
            <item android:inset="1dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/md_theme_primary_container" />
                    <corners android:radius="23dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>