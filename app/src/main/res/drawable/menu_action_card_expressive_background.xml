<?xml version="1.0" encoding="utf-8"?>
<!-- Material 3 Expressive Action Card -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/md_theme_primary">
    <item>
        <layer-list>
            <!-- Base surface container -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/md_theme_surface_container_highest" />
                    <corners android:radius="20dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/md_theme_outline_variant" />
                </shape>
            </item>
            <!-- Elevated surface effect -->
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="@color/md_theme_surface_container_high"
                        android:centerColor="@color/md_theme_surface_container"
                        android:endColor="@color/md_theme_surface_container_low" />
                    <corners android:radius="19dp" />
                </shape>
            </item>
            <!-- Gaming accent glow effect -->
            <item android:inset="2dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="0.5dp"
                        android:color="@color/md_theme_primary" />
                    <corners android:radius="18dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>