<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- RetroMenu3 - Dimensions and Sizes -->
    
    <!-- Layout Proportions Configuration - HORIZONTAL (XXYYZZ)
         - XX = espaço esquerdo (em %)
         - YY = conteúdo central (em %)
         - ZZ = espaço direito (em %)
         Exemplo: "108010" = 10% esq, 80% centro, 10% dir
                  "107020" = 10% esq, 70% centro, 20% dir
         Total DEVE ser 100%
    -->
    <string name="rm_portrait_horizontal_proportions">108010</string>
    <string name="rm_landscape_horizontal_proportions">255025</string>

    <!-- Layout Proportions Configuration - VERTICAL (XXYYZZ)
         - XX = espaço topo (em %)
         - YY = conteúdo menu (em %)
         - ZZ = espaço abaixo (em %)
         Exemplo: "103050" = 10% topo, 30% menu, 50% abaixo
                  "304030" = 30% topo, 40% menu, 30% abaixo (centralizado)
         Total DEVE ser 100%
         
         Portrait: Alinhado ao topo com pequeno espaço abaixo (10-70-20)
         Landscape: Centralizado (30-40-30)
    -->
    <string name="rm_portrait_vertical_proportions">336601</string>
    <string name="rm_landscape_vertical_proportions">009901</string>
    
    <!-- Legacy Layout Weights (mantidos para compatibilidade) -->
    <item name="rm_side_space_weight" format="float" type="dimen">0.25</item>
    <item name="rm_center_content_weight" format="float" type="dimen">0.50</item>
    
    <!-- Padding and Margins -->
    <dimen name="rm_container_padding_vertical">24dp</dimen>
    <dimen name="rm_title_margin_bottom">12dp</dimen>
    <dimen name="rm_extra_space_height">16dp</dimen>
    
    <!-- Title Alignment Anchors - CRITICAL for pixel-perfect alignment across all menus -->
    <dimen name="rm_title_margin_start">0dp</dimen>
    <dimen name="rm_title_padding_start">0dp</dimen>
    <dimen name="rm_title_padding_end">0dp</dimen>
    
    <!-- Menu Item -->
    <dimen name="rm_menu_item_height">40dp</dimen>
    <dimen name="rm_menu_item_padding">8dp</dimen>
    <dimen name="rm_menu_item_corner_radius">16dp</dimen>
    <dimen name="rm_menu_item_elevation">0dp</dimen>
    <dimen name="rm_menu_item_stroke_width">0dp</dimen>
    
    <!-- Selection Arrow -->
    <dimen name="rm_arrow_margin_start">12dp</dimen>
    <dimen name="rm_arrow_margin_end">0dp</dimen>
    
    <!-- Text Sizes -->
    <dimen name="rm_title_text_size">36sp</dimen>
    <dimen name="rm_arrow_text_size">22sp</dimen>
    <dimen name="rm_menu_item_text_size">22sp</dimen>
    <dimen name="rm_info_label_text_size">18sp</dimen>
    <dimen name="rm_info_value_text_size">18sp</dimen>
    
    <!-- Info Margins -->
    <dimen name="rm_info_margin_bottom">8dp</dimen>
    <dimen name="rm_info_text_margin_bottom">0dp</dimen>
    <dimen name="rm_menu_item_margin_bottom">16dp</dimen>
    
    <!-- Text Shadow - values must be float without unit -->
    <item name="rm_shadow_dx" format="float" type="dimen">4.0</item>
    <item name="rm_shadow_dy" format="float" type="dimen">4.0</item>
    <item name="rm_shadow_radius" format="float" type="dimen">8.0</item>
    
    <!-- Letter Spacing -->
    <item name="rm_title_letter_spacing" format="float" type="dimen">0.05</item>
    
    <!-- Save State Grid Slots -->
    <dimen name="save_slot_size">80dp</dimen>
    <dimen name="save_slot_margin">4dp</dimen>
    <dimen name="save_slot_padding">4dp</dimen>
</resources>
