<?xml version="1.0" encoding="utf-8"?>
<!--
    Save Slot Item Layout
    Individual slot in the 3x3 grid showing screenshot preview and slot name.
    Used by SaveStateGridFragment for save/load/manage operations.
    Uses layout_weight for proportional sizing across different screen sizes.
    Text overlays the image with semi-transparent background for better visibility.
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slot_container"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:layout_margin="@dimen/save_slot_margin"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/slot_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/slot_background_empty"
        android:clipToOutline="true"
        android:outlineProvider="background">

        <!-- Screenshot takes full space -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="true"
            android:clipToPadding="true">

            <!-- Screenshot or Placeholder -->
            <ImageView
                android:id="@+id/slot_screenshot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="@string/slot_screenshot_description"
                tools:src="@drawable/ic_empty_slot" />

            <!-- Slot Name with semi-transparent background overlay at bottom -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#4D333333"
                android:padding="4dp"
                android:gravity="start">

                <TextView
                    android:id="@+id/slot_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="@dimen/save_slot_text_size"
                    android:textColor="@color/rm_text_color"
                    android:shadowColor="@color/rm_shadow_color"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    tools:text="Slot 1" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <!-- Glow Indicator for Last-Used Slot (Pulsing White Border) -->
    <!-- Placed after slot_content so it appears in front of background -->
    <!-- Elevated above slot_content but below selection border -->
    <!-- Only visible when this slot is last-used but NOT selected -->
    <View
        android:id="@+id/slot_glow_indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/slot_glow_indicator"
        android:visibility="gone"
        android:elevation="2dp" />

    <!-- Selection Indicator (border overlay) -->
    <View
        android:id="@+id/slot_selection_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/slot_selected_border"
        android:visibility="gone"
        android:elevation="4dp" />

</FrameLayout>
