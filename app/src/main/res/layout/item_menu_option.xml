<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_item_height"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="@dimen/menu_item_padding_horizontal"
    android:paddingVertical="@dimen/menu_item_padding_vertical"
    android:background="@android:color/transparent"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Menu Item Icon -->
    <ImageView
        android:id="@+id/menu_item_icon"
        android:layout_width="@dimen/menu_item_icon_size"
        android:layout_height="@dimen/menu_item_icon_size"
        android:layout_marginEnd="@dimen/menu_item_icon_margin_end"
        android:contentDescription="@string/menu_item_icon_description"
    app:tint="?attr/colorPrimary" />

    <!-- Text Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/menu_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/menu_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Status Indicator -->
    <TextView
        android:id="@+id/menu_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceLabelSmall"
    android:textColor="?attr/colorPrimary"
        android:visibility="gone"
        android:layout_marginStart="8dp" />

    <!-- Secondary Icon (for toggle states) -->
    <ImageView
        android:id="@+id/menu_item_secondary_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        app:tint="?attr/colorOnSurfaceVariant" />

</LinearLayout>
