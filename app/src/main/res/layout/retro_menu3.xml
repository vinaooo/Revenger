<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="#CC000000"
    android:fitsSystemWindows="false">

    <!-- Fullscreen Container with 3 sections HORIZONTAL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Left 25% - Empty Space -->
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25" />

        <!-- Center 50% - Menu Content -->
        <LinearLayout
            android:id="@+id/menu_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="48dp">
            
            <!-- Menu Title -->
            <TextView
                android:id="@+id/menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retro Menu 3"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:letterSpacing="0.05" />
            
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="false"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:fadeScrollbars="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">
                    
                    <!-- Continue Game -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/menu_continue"
                        style="@style/Widget.Material3.CardView.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_marginVertical="6dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@android:color/transparent"
                        app:cardBackgroundColor="@android:color/transparent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="14dp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/menu_continue"
                                    android:textSize="16sp"
                                    android:textColor="#FFFFFF" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/menu_continue_description"
                                    android:textSize="12sp"
                                    android:textColor="#CCCCCC" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    
                    <!-- Reset Game -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/menu_reset"
                        style="@style/Widget.Material3.CardView.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_marginVertical="6dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@android:color/transparent"
                        app:cardBackgroundColor="@android:color/transparent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="14dp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/menu_reset"
                                    android:textSize="16sp"
                                    android:textColor="#FFFFFF" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/menu_reset_description"
                                    android:textSize="12sp"
                                    android:textColor="#CCCCCC" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    
                    <!-- Save State -->
                    <com.google.android.material.card.MaterialCardView
                            android:id="@+id/menu_save_state"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginVertical="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@android:color/transparent"
                            app:cardBackgroundColor="@android:color/transparent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="14dp">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_save_state"
                                        android:textSize="16sp"
                                        android:textColor="#FFFFFF" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_save_state_description"
                                        android:textSize="12sp"
                                        android:textColor="#CCCCCC" />
                                </LinearLayout>
                            </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    
                    <!-- Load State -->
                    <com.google.android.material.card.MaterialCardView
                            android:id="@+id/menu_load_state"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginVertical="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@android:color/transparent"
                            app:cardBackgroundColor="@android:color/transparent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="14dp">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_load_state"
                                        android:textSize="16sp"
                                        android:textColor="#FFFFFF" />
                                    <TextView
                                        android:id="@+id/load_state_status"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/save_state_not_available"
                                        android:textSize="12sp"
                                        android:textColor="#CCCCCC" />
                                </LinearLayout>
                            </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    
                    <!-- Audio Toggle -->
                    <com.google.android.material.card.MaterialCardView
                            android:id="@+id/menu_toggle_audio"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginVertical="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@android:color/transparent"
                            app:cardBackgroundColor="@android:color/transparent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="14dp">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/audio_toggle_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/audio_on"
                                        android:textSize="16sp"
                                        android:textColor="#FFFFFF" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_toggle_audio"
                                        android:textSize="12sp"
                                        android:textColor="#CCCCCC" />
                                </LinearLayout>
                                <com.google.android.material.materialswitch.MaterialSwitch
                                    android:id="@+id/audio_switch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:clickable="false"
                                    android:focusable="false" />
                            </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    
                    <!-- Fast Forward -->
                    <com.google.android.material.card.MaterialCardView
                            android:id="@+id/menu_fast_forward"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginVertical="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@android:color/transparent"
                            app:cardBackgroundColor="@android:color/transparent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="14dp">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/fast_forward_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_fast_forward"
                                        android:textSize="16sp"
                                        android:textColor="#FFFFFF" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_fast_forward_description"
                                        android:textSize="12sp"
                                        android:textColor="#CCCCCC" />
                                </LinearLayout>
                                <com.google.android.material.materialswitch.MaterialSwitch
                                    android:id="@+id/fast_forward_switch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:clickable="false"
                                    android:focusable="false" />
                            </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    
                    <!-- Exit Game -->
                    <com.google.android.material.card.MaterialCardView
                            android:id="@+id/menu_exit"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginVertical="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@android:color/transparent"
                            app:cardBackgroundColor="@android:color/transparent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="14dp">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_exit"
                                        android:textSize="16sp"
                                        android:textColor="#FFFFFF" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_exit_description"
                                        android:textSize="12sp"
                                        android:textColor="#CCCCCC" />
                                </LinearLayout>
                            </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <!-- Right 25% - Empty Space -->
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25" />

    </LinearLayout>

</FrameLayout>
