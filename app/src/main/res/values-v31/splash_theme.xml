<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema específico para API 31+ (Android 12+) com SplashScreen nativa -->
    <style name="Theme.Revenger.Splash" parent="Theme.SplashScreen">
        <!-- Fundo preto puro -->
        <item name="windowSplashScreenBackground">@android:color/black</item>
        
        <!-- Ícone do app na splash -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/black</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/black</item>
        
        <!-- Sem animação de saída automática para evitar flash -->
        <item name="android:windowSplashScreenAnimationDuration">0</item>
        
        <!-- Tema a ser aplicado após a splash screen (fundo preto) -->
        <item name="postSplashScreenTheme">@style/Theme.Revenger.Base</item>
    </style>
</resources>
