<?xml version="1.0" encoding="utf-8"?>
<!-- Material 3 Expressive Typography System -->
<resources>
    <!-- Display Typography - Large impact text -->
    <style name="TextAppearance.Material3.DisplayLarge.Expressive">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">57sp</item>
        <item name="android:lineSpacingMultiplier">1.12</item>
        <item name="android:letterSpacing">-0.025</item>
        <item name="android:textColor">@color/md_theme_on_surface</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.Material3.DisplayMedium.Expressive">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">45sp</item>
        <item name="android:lineSpacingMultiplier">1.16</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/md_theme_on_surface</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Headline Typography - Section headers -->
    <style name="TextAppearance.Material3.HeadlineLarge.Gaming">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.Material3.HeadlineMedium.Gaming">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">28sp</item>
        <item name="android:lineSpacingMultiplier">1.29</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.Material3.HeadlineSmall.Gaming">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingMultiplier">1.33</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/md_theme_on_surface</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Title Typography - Component titles -->
    <style name="TextAppearance.Material3.TitleLarge.Expressive">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingMultiplier">1.27</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/md_theme_on_surface</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.Material3.TitleMedium.Action">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.50</item>
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:textColor">@color/md_theme_on_surface</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.Material3.TitleSmall.Subtitle">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.43</item>
        <item name="android:letterSpacing">0.0071</item>
        <item name="android:textColor">@color/md_theme_on_surface_variant</item>
    </style>
    
    <!-- Body Typography - Main content -->
    <style name="TextAppearance.Material3.BodyLarge.Content">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.50</item>
        <item name="android:letterSpacing">0.0094</item>
        <item name="android:textColor">@color/md_theme_on_surface</item>
    </style>
    
    <style name="TextAppearance.Material3.BodyMedium.Content">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.43</item>
        <item name="android:letterSpacing">0.0179</item>
        <item name="android:textColor">@color/md_theme_on_surface</item>
    </style>
    
    <!-- Label Typography - UI elements -->
    <style name="TextAppearance.Material3.LabelLarge.Button">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.43</item>
        <item name="android:letterSpacing">0.0071</item>
        <item name="android:textColor">@color/md_theme_on_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TextAppearance.Material3.LabelMedium.Gaming">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.33</item>
        <item name="android:letterSpacing">0.042</item>
        <item name="android:textColor">@color/md_theme_on_surface_variant</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <!-- Gaming Menu Specific Styles -->
    <!-- Base Gaming TextAppearance -->
    <style name="TextAppearance.Gaming" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/md_theme_on_surface</item>
    </style>
    
    <style name="TextAppearance.Gaming.MenuTitle" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:textColor">@color/md_theme_on_surface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/md_theme_primary</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>
    
    <style name="TextAppearance.Gaming.ActionTitle" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.50</item>
        <item name="android:letterSpacing">0.0094</item>
        <item name="android:textColor">@color/md_theme_on_surface</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.Gaming.ActionSubtitle" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.33</item>
        <item name="android:letterSpacing">0.042</item>
        <item name="android:textColor">@color/md_theme_on_surface_variant</item>
        <item name="android:alpha">0.85</item>
    </style>
</resources>