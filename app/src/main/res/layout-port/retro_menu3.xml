<?xml version="1.0" encoding="utf-8"?>
<!-- Portrait override: centraliza verticalmente o menu -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_content_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/retro_menu3_background">

    <LinearLayout
        android:id="@+id/menu_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="@dimen/retro_menu3_container_padding_vertical"
        android:elevation="0dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">
        <!-- Menu Title -->
            <TextView
                android:id="@+id/menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retro_menu3_title"
                android:textSize="@dimen/retro_menu3_title_text_size"
                android:textColor="@color/retro_menu3_text_color"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/retro_menu3_title_margin_bottom"
                android:letterSpacing="@dimen/retro_menu3_title_letter_spacing"
                android:shadowColor="@color/retro_menu3_shadow_color"
                android:shadowDx="@dimen/retro_menu3_shadow_dx"
                android:shadowDy="@dimen/retro_menu3_shadow_dy"
                android:shadowRadius="@dimen/retro_menu3_shadow_radius"
                android:elevation="0dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="false"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:fadeScrollbars="false"
                android:clipToPadding="false"
                android:elevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:elevation="0dp">
                    <!-- Continue Game -->
                    <com.vinaooo.revenger.ui.retromenu3.RetroCardView
                        android:id="@+id/menu_continue"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/retro_menu3_menu_item_height"
                        android:clickable="true"
                        android:focusable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/retro_menu3_menu_item_padding">
                            <TextView
                                android:id="@+id/selection_arrow_continue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/retro_menu3_selection_arrow"
                                android:textSize="@dimen/retro_menu3_arrow_text_size"
                                android:textColor="@color/retro_menu3_text_color"
                                android:layout_marginStart="0dp"
                                android:layout_marginEnd="@dimen/retro_menu3_arrow_margin_end"
                                android:visibility="gone"
                                android:shadowColor="@color/retro_menu3_shadow_color"
                                android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/continue_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/menu_continue"
                                    android:textSize="@dimen/retro_menu3_menu_item_text_size"
                                    android:textColor="@color/retro_menu3_text_color"
                                    android:shadowColor="@color/retro_menu3_shadow_color"
                                    android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                    android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                    android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.vinaooo.revenger.ui.retromenu3.RetroCardView>
                    <!-- Reset Game -->
                    <com.vinaooo.revenger.ui.retromenu3.RetroCardView
                        android:id="@+id/menu_reset"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/retro_menu3_menu_item_height"
                        android:clickable="true"
                        android:focusable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/retro_menu3_menu_item_padding">
                            <TextView
                                android:id="@+id/selection_arrow_reset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/retro_menu3_selection_arrow"
                                android:textSize="@dimen/retro_menu3_arrow_text_size"
                                android:textColor="@color/retro_menu3_text_color"
                                android:layout_marginStart="0dp"
                                android:layout_marginEnd="@dimen/retro_menu3_arrow_margin_end"
                                android:visibility="gone"
                                android:shadowColor="@color/retro_menu3_shadow_color"
                                android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/reset_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/menu_reset"
                                    android:textSize="@dimen/retro_menu3_menu_item_text_size"
                                    android:textColor="@color/retro_menu3_text_color"
                                    android:shadowColor="@color/retro_menu3_shadow_color"
                                    android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                    android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                    android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.vinaooo.revenger.ui.retromenu3.RetroCardView>
                    <!-- Submenu 1 -->
                    <com.vinaooo.revenger.ui.retromenu3.RetroCardView
                        android:id="@+id/menu_submenu1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/retro_menu3_menu_item_height"
                        android:clickable="true"
                        android:focusable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/retro_menu3_menu_item_padding">
                            <TextView
                                android:id="@+id/selection_arrow_submenu1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/retro_menu3_selection_arrow"
                                android:textSize="@dimen/retro_menu3_arrow_text_size"
                                android:textColor="@color/retro_menu3_text_color"
                                android:layout_marginStart="0dp"
                                android:layout_marginEnd="@dimen/retro_menu3_arrow_margin_end"
                                android:visibility="gone"
                                android:shadowColor="@color/retro_menu3_shadow_color"
                                android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/progress_menu_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/progress_menu_title"
                                    android:textSize="@dimen/retro_menu3_menu_item_text_size"
                                    android:textColor="@color/retro_menu3_text_color"
                                    android:shadowColor="@color/retro_menu3_shadow_color"
                                    android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                    android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                    android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.vinaooo.revenger.ui.retromenu3.RetroCardView>
                    <!-- Settings -->
                    <com.vinaooo.revenger.ui.retromenu3.RetroCardView
                        android:id="@+id/menu_settings"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/retro_menu3_menu_item_height"
                        android:clickable="true"
                        android:focusable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/retro_menu3_menu_item_padding">
                            <TextView
                                android:id="@+id/selection_arrow_settings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/retro_menu3_selection_arrow"
                                android:textSize="@dimen/retro_menu3_arrow_text_size"
                                android:textColor="@color/retro_menu3_text_color"
                                android:layout_marginStart="0dp"
                                android:layout_marginEnd="@dimen/retro_menu3_arrow_margin_end"
                                android:visibility="gone"
                                android:shadowColor="@color/retro_menu3_shadow_color"
                                android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/settings_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/menu_settings"
                                    android:textSize="@dimen/retro_menu3_menu_item_text_size"
                                    android:textColor="@color/retro_menu3_text_color"
                                    android:shadowColor="@color/retro_menu3_shadow_color"
                                    android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                    android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                    android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.vinaooo.revenger.ui.retromenu3.RetroCardView>
                    <!-- Exit Menu -->
                    <com.vinaooo.revenger.ui.retromenu3.RetroCardView
                        android:id="@+id/menu_exit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/retro_menu3_menu_item_height"
                        android:clickable="true"
                        android:focusable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/retro_menu3_menu_item_padding">
                            <TextView
                                android:id="@+id/selection_arrow_exit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/retro_menu3_selection_arrow"
                                android:textSize="@dimen/retro_menu3_arrow_text_size"
                                android:textColor="@color/retro_menu3_text_color"
                                android:layout_marginStart="0dp"
                                android:layout_marginEnd="@dimen/retro_menu3_arrow_margin_end"
                                android:visibility="gone"
                                android:shadowColor="@color/retro_menu3_shadow_color"
                                android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/exit_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/exit_menu_title"
                                    android:textSize="@dimen/retro_menu3_menu_item_text_size"
                                    android:textColor="@color/retro_menu3_text_color"
                                    android:shadowColor="@color/retro_menu3_shadow_color"
                                    android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                    android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                    android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.vinaooo.revenger.ui.retromenu3.RetroCardView>
                    <!-- Extra space for last item -->
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/retro_menu3_extra_space_height" />
                </LinearLayout>
            </ScrollView>

            <TextView
                android:id="@+id/retro_menu3_controls_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retro_menu3_controls_hint"
                android:textSize="@dimen/retro_menu3_menu_item_text_size"
                android:textColor="@color/retro_menu3_text_color"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="@dimen/retro_menu3_container_padding_vertical"
                android:layout_marginTop="48dp"
                android:shadowColor="@color/retro_menu3_shadow_color"
                android:shadowDx="@dimen/retro_menu3_shadow_dx"
                android:shadowDy="@dimen/retro_menu3_shadow_dy"
                android:shadowRadius="@dimen/retro_menu3_shadow_radius"
                android:gravity="end"
                android:layout_gravity="end"
            />
        </LinearLayout>

</FrameLayout>
