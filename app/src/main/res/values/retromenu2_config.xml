<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- RetroMenu2 Configuration -->
    <!-- All visual and behavioral settings for the new retro-style menu -->

    <!-- ============================================================ -->
    <!-- BUTTON CONFIGURATION -->
    <!-- ============================================================ -->
    <!-- false = A:Confirm B:Cancel (Nintendo style) -->
    <!-- true = B:Confirm A:Cancel (Xbox/SEGA style) -->
    <bool name="retromenu2_swap_ab">false</bool>

    <!-- ============================================================ -->
    <!-- VISUAL CONFIGURATION -->
    <!-- ============================================================ -->
    <!-- Background: Transparent white overlay -->
    <color name="retromenu2_background">#20FFFFFF</color>
    
    <!-- Text colors -->
    <color name="retromenu2_text_color">#FFFFFF</color>
    <color name="retromenu2_text_selected">#FFFF00</color>
    <color name="retromenu2_text_disabled">#808080</color>
    
    <!-- ============================================================ -->
    <!-- FONT CONFIGURATION -->
    <!-- ============================================================ -->
    <string name="retromenu2_font" translatable="false">arcadenormal.ttf</string>
    
    <!-- Font sizes -->
    <dimen name="retromenu2_title_text_size">48sp</dimen>
    <dimen name="retromenu2_option_text_size">32sp</dimen>
    <dimen name="retromenu2_info_text_size">20sp</dimen>
    <dimen name="retromenu2_loading_text_size">24sp</dimen>
    
    <!-- ============================================================ -->
    <!-- LAYOUT CONFIGURATION -->
    <!-- ============================================================ -->
    <!-- Spacing between menu options -->
    <dimen name="retromenu2_option_spacing">24dp</dimen>
    
    <!-- Padding around menu -->
    <dimen name="retromenu2_padding">32dp</dimen>
    
    <!-- ============================================================ -->
    <!-- ANIMATION CONFIGURATION -->
    <!-- ============================================================ -->
    <!-- Transition duration for submenu slide animations (ms) -->
    <integer name="retromenu2_transition_duration">300</integer>
    
    <!-- Loading text blink rate (ms) -->
    <integer name="retromenu2_loading_blink_rate">500</integer>
    
    <!-- Minimum loading screen duration (ms) -->
    <integer name="retromenu2_min_loading_duration">2000</integer>
    
    <!-- START button block duration after menu closes (ms) -->
    <integer name="retromenu2_start_block_duration">500</integer>
    
    <!-- ============================================================ -->
    <!-- NAVIGATION CONFIGURATION -->
    <!-- ============================================================ -->
    <!-- Analog stick threshold for single-trigger navigation (0.0 to 1.0) -->
    <string name="retromenu2_analog_threshold">0.7</string>
    
    <!-- ============================================================ -->
    <!-- MENU TEXT STRINGS -->
    <!-- ============================================================ -->
    <string name="retromenu2_title">PAUSE</string>
    
    <!-- Main menu options -->
    <string name="retromenu2_option_continue">Continue</string>
    <string name="retromenu2_option_restart">Restart Game</string>
    <string name="retromenu2_option_save">Save State</string>
    <string name="retromenu2_option_load">Load State</string>
    <string name="retromenu2_option_settings">Settings</string>
    <string name="retromenu2_option_exit">Exit Game</string>
    
    <!-- Settings submenu options -->
    <string name="retromenu2_settings_title">SETTINGS</string>
    <string name="retromenu2_settings_game_sound">Game Sound</string>
    <string name="retromenu2_settings_menu_sound">Menu Sound</string>
    <string name="retromenu2_settings_speed">Speed</string>
    <string name="retromenu2_settings_back">Back</string>
    
    <!-- Settings values -->
    <string name="retromenu2_value_on">ON</string>
    <string name="retromenu2_value_off">OFF</string>
    <string name="retromenu2_value_normal">Normal</string>
    <string name="retromenu2_value_fast">Fast</string>
    
    <!-- Exit submenu options -->
    <string name="retromenu2_exit_title">EXIT GAME</string>
    <string name="retromenu2_exit_save_and_exit">Save and Exit</string>
    <string name="retromenu2_exit_cancel">Cancel</string>
    <string name="retromenu2_exit_without_save">Exit Without Save</string>
    
    <!-- Status messages -->
    <string name="retromenu2_loading">LOADING...</string>
    <string name="retromenu2_no_save_state">No save state available</string>
    
    <!-- Button hints -->
    <string name="retromenu2_hint_confirm_a">[A] CONFIRM  [B] CANCEL</string>
    <string name="retromenu2_hint_confirm_b">[B] CONFIRM  [A] CANCEL</string>
    
    <!-- ============================================================ -->
    <!-- SHAREDPREFERENCES KEYS -->
    <!-- ============================================================ -->
    <!-- Keys for persisting settings between sessions -->
    <string name="retromenu2_pref_game_sound" translatable="false">retromenu2_game_sound</string>
    <string name="retromenu2_pref_menu_sound" translatable="false">retromenu2_menu_sound</string>
    <string name="retromenu2_pref_speed_fast" translatable="false">retromenu2_speed_fast</string>
</resources>
