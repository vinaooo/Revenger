<?xml version="1.0" encoding="utf-8"?>
<!-- Material 3 Expressive BottomSheet Background -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <gradient
        android:type="radial"
        android:centerX="0.5"
        android:centerY="0.0"
        android:gradientRadius="800dp"
        android:startColor="@color/md_theme_surface_container_high"
        android:centerColor="@color/md_theme_surface_container"
        android:endColor="@color/md_theme_surface_container_low" />
    <corners 
        android:topLeftRadius="28dp"
        android:topRightRadius="28dp"
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="0dp" />
    <stroke
        android:width="1dp"
        android:color="@color/md_theme_outline_variant" />
</shape>