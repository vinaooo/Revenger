<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="false">

    <!-- Floating Menu Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menu_container"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:maxHeight="400dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section - Fixed at top (outside ScrollView) -->
            <LinearLayout
                android:id="@+id/menu_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:paddingBottom="12dp"
                android:background="?attr/colorSurface">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_gamepad_24"
                    app:tint="?attr/colorOnSurface"
                    android:contentDescription="@string/game_menu_icon" />

                <TextView
                    android:id="@+id/menu_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="@string/game_menu_title"
                    android:textAppearance="?attr/textAppearanceHeadlineMedium"
                    android:textColor="?attr/colorOnSurface" />

            </LinearLayout>

            <!-- Scrollable Content (only menu items) -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="false"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:fadeScrollbars="false"
                android:maxHeight="300dp">

                <!-- Menu Items Container - Scrollable -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp"
                    android:paddingBottom="16dp">

                        <!-- Reset Game -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/menu_reset"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="3dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="?attr/colorSurface">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="14dp">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_reset_24"
                                    app:tint="?attr/colorOnSurfaceVariant"
                                    android:contentDescription="@string/modern_menu_reset" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/modern_menu_reset"
                                        android:textAppearance="?attr/textAppearanceBodyLarge"
                                        android:textColor="?attr/colorOnSurface" />

                                </LinearLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Save State -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/menu_save_state"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="3dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="?attr/colorSurface">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="14dp">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_save_24"
                                    app:tint="?attr/colorOnSurfaceVariant"
                                    android:contentDescription="@string/modern_menu_save_state" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/modern_menu_save_state"
                                        android:textAppearance="?attr/textAppearanceBodyLarge"
                                        android:textColor="?attr/colorOnSurface" />

                                </LinearLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Load State -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/menu_load_state"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="3dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="?attr/colorSurface">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="14dp">

                                <ImageView
                                    android:id="@+id/load_state_icon"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_load_24"
                                    app:tint="?attr/colorOnSurfaceVariant" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/modern_menu_load_state"
                                        android:textAppearance="?attr/textAppearanceBodyLarge"
                                        android:textColor="?attr/colorOnSurface" />

                                    <TextView
                                        android:id="@+id/load_state_status"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/save_state_not_available"
                                        android:textAppearance="?attr/textAppearanceBodySmall"
                                        android:textColor="?attr/colorOnSurfaceVariant" />

                                </LinearLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Audio Toggle -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/menu_toggle_audio"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="3dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="?attr/colorSurface">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="14dp">

                                <ImageView
                                    android:id="@+id/audio_toggle_icon"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_volume_up_24"
                                    app:tint="?attr/colorOnSurfaceVariant" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/audio_toggle_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/audio_on"
                                        android:textAppearance="?attr/textAppearanceBodyLarge"
                                        android:textColor="?attr/colorOnSurface" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_toggle_audio"
                                        android:textAppearance="?attr/textAppearanceBodySmall"
                                        android:textColor="?attr/colorOnSurfaceVariant" />

                                </LinearLayout>

                                <com.google.android.material.materialswitch.MaterialSwitch
                                    android:id="@+id/audio_switch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:clickable="false"
                                    android:focusable="false" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Fast Forward -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/menu_fast_forward"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="3dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="?attr/colorSurface">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="14dp">

                                <ImageView
                                    android:id="@+id/fast_forward_icon"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_fast_forward_24"
                                    app:tint="?attr/colorOnSurfaceVariant" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/fast_forward_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/modern_menu_fast_forward"
                                        android:textAppearance="?attr/textAppearanceBodyLarge"
                                        android:textColor="?attr/colorOnSurface" />

                                </LinearLayout>

                                <com.google.android.material.materialswitch.MaterialSwitch
                                    android:id="@+id/fast_forward_switch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:clickable="false"
                                    android:focusable="false" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Exit Game -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/menu_exit"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="3dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="?attr/colorSurface">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="14dp">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_close_24"
                                    app:tint="?attr/colorOnSurfaceVariant"
                                    android:contentDescription="@string/modern_menu_exit" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/modern_menu_exit"
                                        android:textAppearance="?attr/textAppearanceBodyLarge"
                                        android:textColor="?attr/colorOnSurface" />

                                </LinearLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>