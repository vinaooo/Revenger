<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/retro_menu3_background"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/retro_menu3_menu_item_padding">

        <!-- Left 25% - Empty Space -->
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/retro_menu3_side_space_weight" />

        <!-- Center 50% - Menu Content -->
        <LinearLayout
            android:id="@+id/about_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/retro_menu3_center_content_weight"
            android:orientation="vertical"
            android:paddingVertical="@dimen/retro_menu3_container_padding_vertical">

            <!-- Menu Title -->
            <TextView
                android:id="@+id/about_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_menu_title"
                android:textSize="@dimen/retro_menu3_title_text_size"
                android:textColor="@color/retro_menu3_text_color"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/retro_menu3_title_margin_bottom"
                android:letterSpacing="@dimen/retro_menu3_title_letter_spacing"
                android:includeFontPadding="false"
                android:shadowColor="@color/retro_menu3_shadow_color"
                android:shadowDx="@dimen/retro_menu3_shadow_dx"
                android:shadowDy="@dimen/retro_menu3_shadow_dy"
                android:shadowRadius="@dimen/retro_menu3_shadow_radius" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="false"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:fadeScrollbars="false"
                android:clipToPadding="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Project Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/retro_menu3_info_margin_bottom">
                        <TextView
                            android:id="@+id/project_name_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/retro_menu3_info_label_text_size"
                            android:textColor="@color/retro_menu3_text_color"
                            android:includeFontPadding="false"
                            android:shadowColor="@color/retro_menu3_shadow_color"
                            android:shadowDx="@dimen/retro_menu3_shadow_dx"
                            android:shadowDy="@dimen/retro_menu3_shadow_dy"
                            android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                        <TextView
                            android:id="@+id/project_name_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="@dimen/retro_menu3_info_value_text_size"
                            android:textColor="@color/retro_menu3_text_color"
                            android:includeFontPadding="false"
                            android:shadowColor="@color/retro_menu3_shadow_color"
                            android:shadowDx="@dimen/retro_menu3_shadow_dx"
                            android:shadowDy="@dimen/retro_menu3_shadow_dy"
                            android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                    </LinearLayout>

                    <!-- ROM Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/retro_menu3_info_margin_bottom">
                        <TextView
                            android:id="@+id/rom_name_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/retro_menu3_info_label_text_size"
                            android:textColor="@color/retro_menu3_text_color"
                            android:includeFontPadding="false"
                            android:shadowColor="@color/retro_menu3_shadow_color"
                            android:shadowDx="@dimen/retro_menu3_shadow_dx"
                            android:shadowDy="@dimen/retro_menu3_shadow_dy"
                            android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                        <TextView
                            android:id="@+id/rom_name_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="@dimen/retro_menu3_info_value_text_size"
                            android:textColor="@color/retro_menu3_text_color"
                            android:includeFontPadding="false"
                            android:shadowColor="@color/retro_menu3_shadow_color"
                            android:shadowDx="@dimen/retro_menu3_shadow_dx"
                            android:shadowDy="@dimen/retro_menu3_shadow_dy"
                            android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                    </LinearLayout>

                    <!-- Core Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/retro_menu3_info_margin_bottom">
                        <TextView
                            android:id="@+id/core_name_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/retro_menu3_info_label_text_size"
                            android:textColor="@color/retro_menu3_text_color"
                            android:includeFontPadding="false"
                            android:shadowColor="@color/retro_menu3_shadow_color"
                            android:shadowDx="@dimen/retro_menu3_shadow_dx"
                            android:shadowDy="@dimen/retro_menu3_shadow_dy"
                            android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                        <TextView
                            android:id="@+id/core_name_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="@dimen/retro_menu3_info_value_text_size"
                            android:textColor="@color/retro_menu3_text_color"
                            android:includeFontPadding="false"
                            android:shadowColor="@color/retro_menu3_shadow_color"
                            android:shadowDx="@dimen/retro_menu3_shadow_dx"
                            android:shadowDy="@dimen/retro_menu3_shadow_dy"
                            android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                    </LinearLayout>

                    <!-- Core Variables Menu Item -->
                    <com.vinaooo.revenger.ui.retromenu3.RetroCardView
                        android:id="@+id/about_core_variables"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/retro_menu3_menu_item_height"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/retro_menu3_menu_item_padding">

                        <TextView
                            android:id="@+id/selection_arrow_core_variables"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/retro_menu3_selection_arrow"
                            android:textSize="@dimen/retro_menu3_arrow_text_size"
                            android:textColor="@color/retro_menu3_text_color"
                            android:visibility="gone"
                            android:padding="0dp"
                            android:includeFontPadding="false"
                            android:shadowColor="@color/retro_menu3_shadow_color"
                            android:shadowDx="@dimen/retro_menu3_shadow_dx"
                            android:shadowDy="@dimen/retro_menu3_shadow_dy"
                            android:shadowRadius="@dimen/retro_menu3_shadow_radius" />

                        <TextView
                            android:id="@+id/core_variables_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/core_variables_menu_title"
                            android:textSize="@dimen/retro_menu3_menu_item_text_size"
                            android:textColor="@color/retro_menu3_text_color"
                            android:includeFontPadding="false"
                            android:shadowColor="@color/retro_menu3_shadow_color"
                            android:shadowDx="@dimen/retro_menu3_shadow_dx"
                            android:shadowDy="@dimen/retro_menu3_shadow_dy"
                            android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                    </com.vinaooo.revenger.ui.retromenu3.RetroCardView>

                    <!-- Back -->
                    <com.vinaooo.revenger.ui.retromenu3.RetroCardView
                        android:id="@+id/about_back"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/retro_menu3_menu_item_height"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/retro_menu3_menu_item_padding">

                        <TextView
                            android:id="@+id/selection_arrow_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/retro_menu3_selection_arrow"
                            android:textSize="@dimen/retro_menu3_arrow_text_size"
                            android:textColor="@color/retro_menu3_text_color"
                            android:visibility="gone"
                            android:padding="0dp"
                            android:includeFontPadding="false"
                            android:shadowColor="@color/retro_menu3_shadow_color"
                            android:shadowDx="@dimen/retro_menu3_shadow_dx"
                            android:shadowDy="@dimen/retro_menu3_shadow_dy"
                            android:shadowRadius="@dimen/retro_menu3_shadow_radius" />

                        <TextView
                            android:id="@+id/back_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/about_back"
                            android:textSize="@dimen/retro_menu3_menu_item_text_size"
                            android:textColor="@color/retro_menu3_text_color"
                            android:includeFontPadding="false"
                            android:shadowColor="@color/retro_menu3_shadow_color"
                            android:shadowDx="@dimen/retro_menu3_shadow_dx"
                            android:shadowDy="@dimen/retro_menu3_shadow_dy"
                            android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                    </com.vinaooo.revenger.ui.retromenu3.RetroCardView>

                    <!-- Extra space for last item -->
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/retro_menu3_extra_space_height" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <!-- Right 25% - Empty Space -->
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/retro_menu3_side_space_weight" />

    </LinearLayout>

</FrameLayout>