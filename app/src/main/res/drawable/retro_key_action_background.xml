<?xml version="1.0" encoding="utf-8"?>
<!-- Background for retro keyboard action keys (OK/Cancel) with states -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state (touch) - RetroMenu3 yellow feedback -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF3D3D3D" />
            <corners android:radius="4dp" />
            <stroke android:width="2dp" android:color="@color/rm_selected_color" />
        </shape>
    </item>

    <!-- Selected/Focused state (for gamepad navigation) - RetroMenu3 yellow -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF3D3D3D" />
            <corners android:radius="4dp" />
            <stroke android:width="2dp" android:color="@color/rm_selected_color" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF3D3D3D" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#FF666666" />
        </shape>
    </item>

</selector>
