<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- A unique identifier for the app (no spaces or special characters allowed) -->
    <string name="config_id">sth</string>

    <!-- The pretty name for the app -->
    <string name="config_name">Sonic The Hedgehog</string>

    <!-- LibRetro core to fetch for this ROM (excluding _libretro_android.so) -->
    <string name="config_core">smsplus</string>
    
    <!-- rom name, the same name the rom file in res/raw without extension -->
    <string name="config_rom">sth</string>

    <!-- Load ROM directly from memory; larger games should have this disabled -->
    <bool name="config_load_bytes">false</bool>

    <!-- Core variables (key=value separated by commas) -->
    <string name="config_variables"></string>

    <!-- Fast forward speed multiplier -->
    <integer name="config_fast_forward_multiplier">2</integer>

    <!-- Fullscreen mode to hide system bars -->
    <bool name="config_fullscreen">true</bool>

    <!-- Orientation modes
        0: Default
        1: Portrait only
        2: Landscape only
        3: Any orientation (including upside-down)
    -->
    <integer name="config_orientation">2</integer>

    <!-- Menu display modes
        0: No menu (disabled)
        1: Menu only via back button
        2: Menu only via SELECT + START combo (virtual and physical)
        3: Menu via both back button and SELECT + START combo

        NOTE: Mode 0 disables all menu functionality,
              use with caution!
    -->
    <integer name="config_menu_mode">2</integer>

    <!-- Should we display a virtual gamepad? -->
    <bool name="config_gamepad">true</bool>

    <!-- Should we vibrate on touch? -->
    <bool name="config_gamepad_haptic">false</bool>

    <!-- GamePad buttons to display -->
    <bool name="config_gamepad_a">true</bool>
    <bool name="config_gamepad_b">true</bool>
    <bool name="config_gamepad_x">true</bool>
    <bool name="config_gamepad_y">true</bool>
    <bool name="config_gamepad_start">true</bool>
    <bool name="config_gamepad_select">true</bool>
    <bool name="config_gamepad_l1">true</bool>
    <bool name="config_gamepad_r1">true</bool>

    <!-- Should the left DPAD be replaced with an analog stick? -->
    <bool name="config_left_analog">false</bool>
</resources>
