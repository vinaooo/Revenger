<?xml version="1.0" encoding="utf-8"?>
<!--
    Save Slot Item Layout
    Individual slot in the 3x3 grid showing screenshot preview and slot name.
    Used by SaveStateGridFragment for save/load/manage operations.
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slot_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/save_slot_margin"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/slot_content"
        android:layout_width="@dimen/save_slot_width"
        android:layout_height="@dimen/save_slot_height"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/save_slot_padding"
        android:background="@drawable/slot_background_empty">

        <!-- Screenshot or Placeholder -->
        <ImageView
            android:id="@+id/slot_screenshot"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="@string/slot_screenshot_description"
            tools:src="@drawable/ic_empty_slot" />

        <!-- Slot Name -->
        <TextView
            android:id="@+id/slot_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/save_slot_text_size"
            android:textColor="@color/rm_text_color"
            android:maxLines="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:layout_marginTop="2dp"
            tools:text="Slot 1" />

    </LinearLayout>

    <!-- Selection Indicator (border overlay) -->
    <View
        android:id="@+id/slot_selection_border"
        android:layout_width="@dimen/save_slot_width"
        android:layout_height="@dimen/save_slot_height"
        android:background="@drawable/slot_selected_border"
        android:visibility="gone" />

</FrameLayout>
