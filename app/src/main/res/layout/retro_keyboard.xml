<?xml version="1.0" encoding="utf-8"?>
<!-- Retro-styled virtual keyboard for dialogs -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyboard_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp">

    <!-- Row 1: Numbers + - _ -->
    <LinearLayout
        android:id="@+id/keyboard_row_numbers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- key_1 duplicado removido -->
        <TextView android:id="@+id/key_1" style="@style/RetroKeyboardKey" android:text="@string/key_1" />
        <TextView android:id="@+id/key_2" style="@style/RetroKeyboardKey" android:text="@string/key_2" />
        <TextView android:id="@+id/key_3" style="@style/RetroKeyboardKey" android:text="@string/key_3" />
        <TextView android:id="@+id/key_4" style="@style/RetroKeyboardKey" android:text="@string/key_4" />
        <TextView android:id="@+id/key_5" style="@style/RetroKeyboardKey" android:text="@string/key_5" />
        <TextView android:id="@+id/key_6" style="@style/RetroKeyboardKey" android:text="@string/key_6" />
        <TextView android:id="@+id/key_7" style="@style/RetroKeyboardKey" android:text="@string/key_7" />
        <TextView android:id="@+id/key_8" style="@style/RetroKeyboardKey" android:text="@string/key_8" />
        <TextView android:id="@+id/key_9" style="@style/RetroKeyboardKey" android:text="@string/key_9" />
        <TextView android:id="@+id/key_0" style="@style/RetroKeyboardKey" android:text="@string/key_0" />
        <TextView android:id="@+id/key_dash" style="@style/RetroKeyboardKey" android:text="@string/key_dash" />
        <TextView android:id="@+id/key_underscore" style="@style/RetroKeyboardKey" android:text="@string/key_underscore" />
    </LinearLayout>

    <!-- Row 2: QWERTYUIOP -->
    <LinearLayout
        android:id="@+id/keyboard_row_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView android:id="@+id/key_q" style="@style/RetroKeyboardKey" android:text="@string/key_q" />
        <TextView android:id="@+id/key_w" style="@style/RetroKeyboardKey" android:text="@string/key_w" />
        <TextView android:id="@+id/key_e" style="@style/RetroKeyboardKey" android:text="@string/key_e" />
        <TextView android:id="@+id/key_r" style="@style/RetroKeyboardKey" android:text="@string/key_r" />
        <TextView android:id="@+id/key_t" style="@style/RetroKeyboardKey" android:text="@string/key_t" />
        <TextView android:id="@+id/key_y" style="@style/RetroKeyboardKey" android:text="@string/key_y" />
        <TextView android:id="@+id/key_u" style="@style/RetroKeyboardKey" android:text="@string/key_u" />
        <TextView android:id="@+id/key_i" style="@style/RetroKeyboardKey" android:text="@string/key_i" />
        <TextView android:id="@+id/key_o" style="@style/RetroKeyboardKey" android:text="@string/key_o" />
        <TextView android:id="@+id/key_p" style="@style/RetroKeyboardKey" android:text="@string/key_p" />
    </LinearLayout>

    <!-- Row 3: ASDFGHJKL -->
    <LinearLayout
        android:id="@+id/keyboard_row_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView android:id="@+id/key_a" style="@style/RetroKeyboardKey" android:text="@string/key_a" />
        <TextView android:id="@+id/key_s" style="@style/RetroKeyboardKey" android:text="@string/key_s" />
        <TextView android:id="@+id/key_d" style="@style/RetroKeyboardKey" android:text="@string/key_d" />
        <TextView android:id="@+id/key_f" style="@style/RetroKeyboardKey" android:text="@string/key_f" />
        <TextView android:id="@+id/key_g" style="@style/RetroKeyboardKey" android:text="@string/key_g" />
        <TextView android:id="@+id/key_h" style="@style/RetroKeyboardKey" android:text="@string/key_h" />
        <TextView android:id="@+id/key_j" style="@style/RetroKeyboardKey" android:text="@string/key_j" />
        <TextView android:id="@+id/key_k" style="@style/RetroKeyboardKey" android:text="@string/key_k" />
        <TextView android:id="@+id/key_l" style="@style/RetroKeyboardKey" android:text="@string/key_l" />
    </LinearLayout>

    <!-- Row 4: ZXCVBNM + , + . + Backspace -->
    <LinearLayout
        android:id="@+id/keyboard_row_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView android:id="@+id/key_z" style="@style/RetroKeyboardKey" android:text="@string/key_z" />
        <TextView android:id="@+id/key_x" style="@style/RetroKeyboardKey" android:text="@string/key_x" />
        <TextView android:id="@+id/key_c" style="@style/RetroKeyboardKey" android:text="@string/key_c" />
        <TextView android:id="@+id/key_v" style="@style/RetroKeyboardKey" android:text="@string/key_v" />
        <TextView android:id="@+id/key_b" style="@style/RetroKeyboardKey" android:text="@string/key_b" />
        <TextView android:id="@+id/key_n" style="@style/RetroKeyboardKey" android:text="@string/key_n" />
        <TextView android:id="@+id/key_m" style="@style/RetroKeyboardKey" android:text="@string/key_m" />
        <TextView android:id="@+id/key_comma" style="@style/RetroKeyboardKey" android:text="@string/key_comma" />
        <TextView android:id="@+id/key_dot" style="@style/RetroKeyboardKey" android:text="@string/key_dot" />
        <TextView android:id="@+id/key_backspace" style="@style/RetroKeyboardKeyWide" android:text="@string/key_backspace" />
    </LinearLayout>

    <!-- Row 5: CANCEL + Space + OK -->
    <LinearLayout
        android:id="@+id/keyboard_row_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView android:id="@+id/key_cancel" style="@style/RetroKeyboardKeyActionWide" android:text="@string/key_cancel" />
        <TextView android:id="@+id/key_space" style="@style/RetroKeyboardKeySpace" android:text="@string/key_space" />
        <TextView android:id="@+id/key_ok" style="@style/RetroKeyboardKeyActionWide" android:text="@string/key_ok" />
    </LinearLayout>
</LinearLayout>

