<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- RetroMenu3 - Dimensions and Sizes -->
    
    <!-- Layout Weights -->
    <item name="retro_menu3_side_space_weight" format="float" type="dimen">0.25</item>
    <item name="retro_menu3_center_content_weight" format="float" type="dimen">0.50</item>
    
    <!-- Padding and Margins -->
    <dimen name="retro_menu3_container_padding_vertical">24dp</dimen>
    <dimen name="retro_menu3_title_margin_bottom">12dp</dimen>
    <dimen name="retro_menu3_extra_space_height">16dp</dimen>
    
    <!-- Menu Item -->
    <dimen name="retro_menu3_menu_item_height">40dp</dimen>
    <dimen name="retro_menu3_menu_item_padding">8dp</dimen>
    <dimen name="retro_menu3_menu_item_corner_radius">16dp</dimen>
    <dimen name="retro_menu3_menu_item_elevation">0dp</dimen>
    <dimen name="retro_menu3_menu_item_stroke_width">0dp</dimen>
    
    <!-- Selection Arrow -->
    <dimen name="retro_menu3_arrow_margin_start">12dp</dimen>
    <dimen name="retro_menu3_arrow_margin_end">0dp</dimen>
    
    <!-- Text Sizes -->
    <dimen name="retro_menu3_title_text_size">36sp</dimen>
    <dimen name="retro_menu3_arrow_text_size">22sp</dimen>
    <dimen name="retro_menu3_menu_item_text_size">22sp</dimen>
    
    <!-- Text Shadow - values must be float without unit -->
    <item name="retro_menu3_shadow_dx" format="float" type="dimen">4.0</item>
    <item name="retro_menu3_shadow_dy" format="float" type="dimen">4.0</item>
    <item name="retro_menu3_shadow_radius" format="float" type="dimen">8.0</item>
    
    <!-- Letter Spacing -->
    <item name="retro_menu3_title_letter_spacing" format="float" type="dimen">0.05</item>
</resources>
