<?xml version="1.0" encoding="utf-8"?>
<!-- Portrait override: uses same layout structure as default but optimized for portrait -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/menu_content_container"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/rm_background"
    android:fitsSystemWindows="false"
    android:elevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/rm_menu_item_padding"
        android:elevation="0dp">

        <!-- Left 25% - Empty Space -->
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/rm_side_space_weight" />

        <!-- Center 50% - Menu Content -->
        <LinearLayout
            android:id="@+id/menu_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/rm_center_content_weight"
            android:orientation="vertical"
            android:paddingVertical="@dimen/rm_container_padding_vertical"
            android:elevation="0dp">
        <!-- Menu Title -->
            <TextView
                android:id="@+id/menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rm_title"
                android:textSize="@dimen/rm_title_text_size"
                android:textColor="@color/rm_text_color"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/rm_title_margin_start"
                android:layout_marginBottom="@dimen/rm_title_margin_bottom"
                android:paddingStart="@dimen/rm_title_padding_start"
                android:paddingEnd="@dimen/rm_title_padding_end"
                android:gravity="start"
                android:letterSpacing="@dimen/rm_title_letter_spacing"
                android:includeFontPadding="false"
                android:shadowColor="@color/rm_shadow_color"
                android:shadowDx="@dimen/rm_shadow_dx"
                android:shadowDy="@dimen/rm_shadow_dy"
                android:shadowRadius="@dimen/rm_shadow_radius"
                android:elevation="0dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="false"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:fadeScrollbars="false"
                android:clipToPadding="false"
                android:elevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:elevation="0dp">
                    <!-- Continue Game -->
                    <com.vinaooo.revenger.ui.retromenu3.RetroCardView
                        android:id="@+id/menu_continue"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/rm_menu_item_height"
                        android:clickable="true"
                        android:focusable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/rm_menu_item_padding">
                            <TextView
                                android:id="@+id/selection_arrow_continue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rm_selection_arrow"
                                android:textSize="@dimen/rm_arrow_text_size"
                                android:textColor="@color/rm_text_color"
                                android:layout_marginStart="0dp"
                                android:layout_marginEnd="@dimen/rm_arrow_margin_end"
                                android:visibility="gone"
                                android:shadowColor="@color/rm_shadow_color"
                                android:shadowDx="@dimen/rm_shadow_dx"
                                android:shadowDy="@dimen/rm_shadow_dy"
                                android:shadowRadius="@dimen/rm_shadow_radius" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/continue_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/menu_continue"
                                    android:textSize="@dimen/rm_menu_item_text_size"
                                    android:textColor="@color/rm_text_color"
                                    android:shadowColor="@color/rm_shadow_color"
                                    android:shadowDx="@dimen/rm_shadow_dx"
                                    android:shadowDy="@dimen/rm_shadow_dy"
                                    android:shadowRadius="@dimen/rm_shadow_radius" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.vinaooo.revenger.ui.retromenu3.RetroCardView>
                    <!-- Reset Game -->
                    <com.vinaooo.revenger.ui.retromenu3.RetroCardView
                        android:id="@+id/menu_reset"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/rm_menu_item_height"
                        android:clickable="true"
                        android:focusable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/rm_menu_item_padding">
                            <TextView
                                android:id="@+id/selection_arrow_reset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rm_selection_arrow"
                                android:textSize="@dimen/rm_arrow_text_size"
                                android:textColor="@color/rm_text_color"
                                android:layout_marginStart="0dp"
                                android:layout_marginEnd="@dimen/rm_arrow_margin_end"
                                android:visibility="gone"
                                android:shadowColor="@color/rm_shadow_color"
                                android:shadowDx="@dimen/rm_shadow_dx"
                                android:shadowDy="@dimen/rm_shadow_dy"
                                android:shadowRadius="@dimen/rm_shadow_radius" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/reset_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/menu_reset"
                                    android:textSize="@dimen/rm_menu_item_text_size"
                                    android:textColor="@color/rm_text_color"
                                    android:shadowColor="@color/rm_shadow_color"
                                    android:shadowDx="@dimen/rm_shadow_dx"
                                    android:shadowDy="@dimen/rm_shadow_dy"
                                    android:shadowRadius="@dimen/rm_shadow_radius" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.vinaooo.revenger.ui.retromenu3.RetroCardView>
                    <!-- Submenu 2 - Progress -->
                    <com.vinaooo.revenger.ui.retromenu3.RetroCardView
                        android:id="@+id/menu_submenu2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/rm_menu_item_height"
                        android:clickable="true"
                        android:focusable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/rm_menu_item_padding">
                            <TextView
                                android:id="@+id/selection_arrow_submenu2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rm_selection_arrow"
                                android:textSize="@dimen/rm_arrow_text_size"
                                android:textColor="@color/rm_text_color"
                                android:layout_marginStart="0dp"
                                android:layout_marginEnd="@dimen/rm_arrow_margin_end"
                                android:visibility="gone"
                                android:shadowColor="@color/rm_shadow_color"
                                android:shadowDx="@dimen/rm_shadow_dx"
                                android:shadowDy="@dimen/rm_shadow_dy"
                                android:shadowRadius="@dimen/rm_shadow_radius" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/submenu2_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/progress_menu_title"
                                    android:textSize="@dimen/rm_menu_item_text_size"
                                    android:textColor="@color/rm_text_color"
                                    android:shadowColor="@color/rm_shadow_color"
                                    android:shadowDx="@dimen/rm_shadow_dx"
                                    android:shadowDy="@dimen/rm_shadow_dy"
                                    android:shadowRadius="@dimen/rm_shadow_radius" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.vinaooo.revenger.ui.retromenu3.RetroCardView>
                    <!-- Submenu 1 - Settings -->
                    <com.vinaooo.revenger.ui.retromenu3.RetroCardView
                        android:id="@+id/menu_submenu1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/rm_menu_item_height"
                        android:clickable="true"
                        android:focusable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/rm_menu_item_padding">
                            <TextView
                                android:id="@+id/selection_arrow_submenu1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rm_selection_arrow"
                                android:textSize="@dimen/rm_arrow_text_size"
                                android:textColor="@color/rm_text_color"
                                android:layout_marginStart="0dp"
                                android:layout_marginEnd="@dimen/rm_arrow_margin_end"
                                android:visibility="gone"
                                android:shadowColor="@color/rm_shadow_color"
                                android:shadowDx="@dimen/rm_shadow_dx"
                                android:shadowDy="@dimen/rm_shadow_dy"
                                android:shadowRadius="@dimen/rm_shadow_radius" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/submenu1_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/menu_settings"
                                    android:textSize="@dimen/rm_menu_item_text_size"
                                    android:textColor="@color/rm_text_color"
                                    android:shadowColor="@color/rm_shadow_color"
                                    android:shadowDx="@dimen/rm_shadow_dx"
                                    android:shadowDy="@dimen/rm_shadow_dy"
                                    android:shadowRadius="@dimen/rm_shadow_radius" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.vinaooo.revenger.ui.retromenu3.RetroCardView>
                    <!-- About -->
                    <com.vinaooo.revenger.ui.retromenu3.RetroCardView
                        android:id="@+id/menu_about"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/rm_menu_item_height"
                        android:clickable="true"
                        android:focusable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/rm_menu_item_padding">
                            <TextView
                                android:id="@+id/selection_arrow_about"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rm_selection_arrow"
                                android:textSize="@dimen/rm_arrow_text_size"
                                android:textColor="@color/rm_text_color"
                                android:layout_marginStart="0dp"
                                android:layout_marginEnd="@dimen/rm_arrow_margin_end"
                                android:visibility="gone"
                                android:shadowColor="@color/rm_shadow_color"
                                android:shadowDx="@dimen/rm_shadow_dx"
                                android:shadowDy="@dimen/rm_shadow_dy"
                                android:shadowRadius="@dimen/rm_shadow_radius" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/about_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/menu_about"
                                    android:textSize="@dimen/rm_menu_item_text_size"
                                    android:textColor="@color/rm_text_color"
                                    android:shadowColor="@color/rm_shadow_color"
                                    android:shadowDx="@dimen/rm_shadow_dx"
                                    android:shadowDy="@dimen/rm_shadow_dy"
                                    android:shadowRadius="@dimen/rm_shadow_radius" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.vinaooo.revenger.ui.retromenu3.RetroCardView>
                    <!-- Exit Menu -->
                    <com.vinaooo.revenger.ui.retromenu3.RetroCardView
                        android:id="@+id/menu_exit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/rm_menu_item_height"
                        android:clickable="true"
                        android:focusable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/rm_menu_item_padding">
                            <TextView
                                android:id="@+id/selection_arrow_exit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rm_selection_arrow"
                                android:textSize="@dimen/rm_arrow_text_size"
                                android:textColor="@color/rm_text_color"
                                android:layout_marginStart="0dp"
                                android:layout_marginEnd="@dimen/rm_arrow_margin_end"
                                android:visibility="gone"
                                android:shadowColor="@color/rm_shadow_color"
                                android:shadowDx="@dimen/rm_shadow_dx"
                                android:shadowDy="@dimen/rm_shadow_dy"
                                android:shadowRadius="@dimen/rm_shadow_radius" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/exit_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/exit_menu_title"
                                    android:textSize="@dimen/rm_menu_item_text_size"
                                    android:textColor="@color/rm_text_color"
                                    android:shadowColor="@color/rm_shadow_color"
                                    android:shadowDx="@dimen/rm_shadow_dx"
                                    android:shadowDy="@dimen/rm_shadow_dy"
                                    android:shadowRadius="@dimen/rm_shadow_radius" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.vinaooo.revenger.ui.retromenu3.RetroCardView>
                    <!-- Extra space for last item -->
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/rm_extra_space_height" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <!-- Right 25% - Empty Space -->
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/rm_side_space_weight" />

    </LinearLayout>

</FrameLayout>
