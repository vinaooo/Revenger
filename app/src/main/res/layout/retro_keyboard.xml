<?xml version="1.0" encoding="utf-8"?>
<!-- Retro-styled virtual keyboard for dialogs -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyboard_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp">

    <!-- Row 1: Numbers + - _ -->
    <LinearLayout
        android:id="@+id/keyboard_row_numbers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView android:id="@+id/key_1" style="@style/RetroKeyboardKey" android:text="1" />
        <TextView android:id="@+id/key_2" style="@style/RetroKeyboardKey" android:text="2" />
        <TextView android:id="@+id/key_3" style="@style/RetroKeyboardKey" android:text="3" />
        <TextView android:id="@+id/key_4" style="@style/RetroKeyboardKey" android:text="4" />
        <TextView android:id="@+id/key_5" style="@style/RetroKeyboardKey" android:text="5" />
        <TextView android:id="@+id/key_6" style="@style/RetroKeyboardKey" android:text="6" />
        <TextView android:id="@+id/key_7" style="@style/RetroKeyboardKey" android:text="7" />
        <TextView android:id="@+id/key_8" style="@style/RetroKeyboardKey" android:text="8" />
        <TextView android:id="@+id/key_9" style="@style/RetroKeyboardKey" android:text="9" />
        <TextView android:id="@+id/key_0" style="@style/RetroKeyboardKey" android:text="0" />
        <TextView android:id="@+id/key_dash" style="@style/RetroKeyboardKey" android:text="-" />
        <TextView android:id="@+id/key_underscore" style="@style/RetroKeyboardKey" android:text="_" />
    </LinearLayout>

    <!-- Row 2: QWERTYUIOP -->
    <LinearLayout
        android:id="@+id/keyboard_row_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView android:id="@+id/key_q" style="@style/RetroKeyboardKey" android:text="Q" />
        <TextView android:id="@+id/key_w" style="@style/RetroKeyboardKey" android:text="W" />
        <TextView android:id="@+id/key_e" style="@style/RetroKeyboardKey" android:text="E" />
        <TextView android:id="@+id/key_r" style="@style/RetroKeyboardKey" android:text="R" />
        <TextView android:id="@+id/key_t" style="@style/RetroKeyboardKey" android:text="T" />
        <TextView android:id="@+id/key_y" style="@style/RetroKeyboardKey" android:text="Y" />
        <TextView android:id="@+id/key_u" style="@style/RetroKeyboardKey" android:text="U" />
        <TextView android:id="@+id/key_i" style="@style/RetroKeyboardKey" android:text="I" />
        <TextView android:id="@+id/key_o" style="@style/RetroKeyboardKey" android:text="O" />
        <TextView android:id="@+id/key_p" style="@style/RetroKeyboardKey" android:text="P" />
    </LinearLayout>

    <!-- Row 3: ASDFGHJKL -->
    <LinearLayout
        android:id="@+id/keyboard_row_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView android:id="@+id/key_a" style="@style/RetroKeyboardKey" android:text="A" />
        <TextView android:id="@+id/key_s" style="@style/RetroKeyboardKey" android:text="S" />
        <TextView android:id="@+id/key_d" style="@style/RetroKeyboardKey" android:text="D" />
        <TextView android:id="@+id/key_f" style="@style/RetroKeyboardKey" android:text="F" />
        <TextView android:id="@+id/key_g" style="@style/RetroKeyboardKey" android:text="G" />
        <TextView android:id="@+id/key_h" style="@style/RetroKeyboardKey" android:text="H" />
        <TextView android:id="@+id/key_j" style="@style/RetroKeyboardKey" android:text="J" />
        <TextView android:id="@+id/key_k" style="@style/RetroKeyboardKey" android:text="K" />
        <TextView android:id="@+id/key_l" style="@style/RetroKeyboardKey" android:text="L" />
    </LinearLayout>

    <!-- Row 4: ZXCVBNM + , + . + Backspace -->
    <LinearLayout
        android:id="@+id/keyboard_row_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView android:id="@+id/key_z" style="@style/RetroKeyboardKey" android:text="Z" />
        <TextView android:id="@+id/key_x" style="@style/RetroKeyboardKey" android:text="X" />
        <TextView android:id="@+id/key_c" style="@style/RetroKeyboardKey" android:text="C" />
        <TextView android:id="@+id/key_v" style="@style/RetroKeyboardKey" android:text="V" />
        <TextView android:id="@+id/key_b" style="@style/RetroKeyboardKey" android:text="B" />
        <TextView android:id="@+id/key_n" style="@style/RetroKeyboardKey" android:text="N" />
        <TextView android:id="@+id/key_m" style="@style/RetroKeyboardKey" android:text="M" />
        <TextView android:id="@+id/key_comma" style="@style/RetroKeyboardKey" android:text="," />
        <TextView android:id="@+id/key_dot" style="@style/RetroKeyboardKey" android:text="." />
        <TextView android:id="@+id/key_backspace" style="@style/RetroKeyboardKeyWide" android:text="âŒ«" />
    </LinearLayout>

    <!-- Row 5: CANCEL + Space + OK -->
    <LinearLayout
        android:id="@+id/keyboard_row_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView android:id="@+id/key_cancel" style="@style/RetroKeyboardKeyActionWide" android:text="CANCEL" />
        <TextView android:id="@+id/key_space" style="@style/RetroKeyboardKeySpace" android:text="SPACE" />
        <TextView android:id="@+id/key_ok" style="@style/RetroKeyboardKeyActionWide" android:text="OK" />
    </LinearLayout>

</LinearLayout>
