<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/retro_menu3_background"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/retro_menu3_menu_item_padding">

        <!-- Left 25% - Empty Space -->
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/retro_menu3_side_space_weight" />

        <!-- Center 50% - Menu Content -->
        <LinearLayout
            android:id="@+id/progress_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@dimen/retro_menu3_center_content_weight"
            android:orientation="vertical"
            android:paddingVertical="@dimen/retro_menu3_container_padding_vertical">

            <!-- Menu Title -->
            <TextView
                android:id="@+id/progress_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/progress_menu_title"
                android:textSize="@dimen/retro_menu3_title_text_size"
                android:textColor="@color/retro_menu3_text_color"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/retro_menu3_title_margin_bottom"
                android:letterSpacing="@dimen/retro_menu3_title_letter_spacing"
                
                android:shadowColor="@color/retro_menu3_shadow_color"
                android:shadowDx="@dimen/retro_menu3_shadow_dx"
                android:shadowDy="@dimen/retro_menu3_shadow_dy"
                android:shadowRadius="@dimen/retro_menu3_shadow_radius" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="false"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:fadeScrollbars="false"
                android:clipToPadding="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Save State -->
                    <com.vinaooo.revenger.ui.retromenu3.RetroCardView
                        android:id="@+id/progress_save_state"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/retro_menu3_menu_item_height"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="@dimen/retro_menu3_menu_item_padding">

                            <!-- Selection Arrow -->
                            <TextView
                                android:id="@+id/selection_arrow_save_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/retro_menu3_selection_arrow"
                                android:textSize="@dimen/retro_menu3_arrow_text_size"
                                android:textColor="@android:color/transparent"
                                
                                android:padding="0dp"
                                android:includeFontPadding="false" />

                            <!-- Content -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/save_state_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/menu_save_state"
                                    android:textSize="@dimen/retro_menu3_menu_item_text_size"
                                    android:textColor="@color/retro_menu3_text_color"
                                    
                                    android:shadowColor="@color/retro_menu3_shadow_color"
                                    android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                    android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                    android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.vinaooo.revenger.ui.retromenu3.RetroCardView>

                    <!-- Load State -->
                    <com.vinaooo.revenger.ui.retromenu3.RetroCardView
                        android:id="@+id/progress_load_state"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/retro_menu3_menu_item_height"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="@dimen/retro_menu3_menu_item_padding">

                            <!-- Selection Arrow -->
                            <TextView
                                android:id="@+id/selection_arrow_load_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/retro_menu3_selection_arrow"
                                android:textSize="@dimen/retro_menu3_arrow_text_size"
                                android:textColor="@android:color/transparent"
                                
                                android:padding="0dp"
                                android:includeFontPadding="false" />

                            <!-- Content -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/load_state_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/menu_load_state"
                                    android:textSize="@dimen/retro_menu3_menu_item_text_size"
                                    android:textColor="@color/retro_menu3_text_color"
                                    
                                    android:shadowColor="@color/retro_menu3_shadow_color"
                                    android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                    android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                    android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.vinaooo.revenger.ui.retromenu3.RetroCardView>

                    <!-- Back -->
                    <com.vinaooo.revenger.ui.retromenu3.RetroCardView
                        android:id="@+id/progress_back"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/retro_menu3_menu_item_height"
                        android:clickable="true"
                        android:focusable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/retro_menu3_menu_item_padding">
                            <TextView
                                android:id="@+id/selection_arrow_back"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/retro_menu3_selection_arrow"
                                android:textSize="@dimen/retro_menu3_arrow_text_size"
                                android:textColor="@color/retro_menu3_text_color"
                                
                                android:layout_marginStart="0dp"
                                android:padding="0dp"
                                android:includeFontPadding="false"
                                android:visibility="gone"
                                android:shadowColor="@color/retro_menu3_shadow_color"
                                android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/back_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/settings_back"
                                    android:textSize="@dimen/retro_menu3_menu_item_text_size"
                                    android:textColor="@color/retro_menu3_text_color"
                                    
                                    android:shadowColor="@color/retro_menu3_shadow_color"
                                    android:shadowDx="@dimen/retro_menu3_shadow_dx"
                                    android:shadowDy="@dimen/retro_menu3_shadow_dy"
                                    android:shadowRadius="@dimen/retro_menu3_shadow_radius" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.vinaooo.revenger.ui.retromenu3.RetroCardView>

                    <!-- Extra space for last item -->
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/retro_menu3_extra_space_height" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <!-- Right 25% - Empty Space -->
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/retro_menu3_side_space_weight" />

    </LinearLayout>

</FrameLayout>