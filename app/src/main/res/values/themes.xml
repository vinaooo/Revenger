<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base theme for Material You support -->
    <style name="Theme.Revenger" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <!-- Game-specific overrides - let DynamicThemeManager handle colors -->
        <!-- Temporarily removed windowBackground to test Dynamic Colors -->
        <!-- <item name="android:windowBackground">@android:color/black</item> -->

        <!-- Enable edge-to-edge -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- BottomSheet styles removed: not used anymore (FloatingGameMenu replaces them) -->

    <!-- Menu Item Text Style -->
    <style name="GameMenuItemTextStyle">
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Floating Game Menu Theme - Light Mode -->
    <style name="Theme.Revenger.FloatingMenu.Light" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Let Material Dynamic Colors work automatically -->

        <!-- Transparent background to show game behind -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>

        <!-- No dim background, game should remain visible -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>

        <!-- Fullscreen support -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Remove window animations for instant appearance -->
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- Floating Game Menu Theme - Dark Mode -->
    <style name="Theme.Revenger.FloatingMenu.Dark" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Let Material Dynamic Colors work automatically -->

        <!-- Transparent background to show game behind -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>

        <!-- No dim background, game should remain visible -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>

        <!-- Fullscreen support -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Remove window animations for instant appearance -->
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- Floating Game Menu Theme -->
    <style name="Theme.Revenger.FloatingMenu" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Let Material Dynamic Colors work automatically -->

        <!-- Transparent background to show game behind -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>

        <!-- No dim background, game should remain visible -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>

        <!-- Fullscreen support -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Remove forced colors - let Material 3 Dynamic Colors handle them -->
        <!-- Remove window animations for instant appearance -->
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>