<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- A unique identifier for the app (no spaces or special characters allowed) -->
    <string name="config_id">sth</string>

    <!-- The pretty name for the app -->
    <string name="config_name">Não jogar</string>

    <!-- LibRetro core to fetch for this ROM (excluding _libretro_android.so) -->
    <string name="config_core">picodrive</string>

    <!-- Snes = snes9x -->
    <!-- megadrive = genesis_plus_gx -->
    <!-- gb = gambatte -->
    <!-- master = gearsystem (best performance for Master System) -->
    <!-- Master e Mega = picodrive (the best) -->

    <!-- rom name, the same name the rom file in res/raw without extension -->
    <string name="config_rom">sth</string>

    <!-- Load ROM directly from memory; larger games should have this disabled -->
    <bool name="config_load_bytes">false</bool>

    <!-- Core variables (key=value separated by commas) -->
    <string name="config_variables">picodrive_overclk68k=+400%,picodrive_overclksz80=+100%</string>

    <!-- Fast forward speed multiplier -->
    <integer name="config_fast_forward_multiplier">2</integer>

    <!-- Fullscreen mode to hide system bars -->
    <bool name="config_fullscreen">true</bool>

    <!-- Orientation modes
        0: Default
        1: Portrait only
        2: Landscape only
        3: Any orientation (including upside-down)

        NOTE: Landscape <-> Portrait can be slow,
                as it involves rebuilding the
                emulator instance!
    -->
    <integer name="config_orientation">3</integer>

    <!-- Menu display modes
        config_menu_mode_back: Enable back button to open/close menu
        config_menu_mode_combo: Enable SELECT + START combo to open menu
        config_menu_mode_gamepad: Enable gamepad menu button (☰) to open/close menu
        All options can be combined
    -->
    <bool name="config_menu_mode_back">true</bool>
    <bool name="config_menu_mode_combo">true</bool>
    <bool name="config_menu_mode_gamepad">true</bool>

    <!-- Should we display a virtual gamepad? -->
    <bool name="config_gamepad">true</bool>

    <!-- Should we vibrate on touch? -->
    <bool name="config_gamepad_haptic">false</bool>

    <!-- Allow pressing multiple action buttons with a single finger (shows intersection dots) -->
    <bool name="config_gamepad_allow_multiple_presses">true</bool>

    <!-- Action button layout style
        1: Nintendo (Top=B, Bottom=X, Left=Y, Right=A)
        2: Xbox (Top=A, Bottom=Y, Left=X, Right=B)
        3: PlayStation (Top=×, Bottom=△, Left=□, Right=○)
    -->
    <integer name="config_action_button">3</integer>

    <!-- GamePad buttons to display -->
    <!-- Action Buttons (Right Gamepad - Center) - Always visible for all console layouts -->
    <bool name="config_gamepad_a">true</bool>     <!-- A Button -->
    <bool name="config_gamepad_b">true</bool>     <!-- B Button -->
    <bool name="config_gamepad_x">true</bool>     <!-- X Button -->
    <bool name="config_gamepad_y">true</bool>     <!-- Y Button -->

    <!-- System Buttons -->
    <bool name="config_gamepad_start">true</bool>   <!-- Start Button -->
    <bool name="config_gamepad_select">true</bool>  <!-- Select Button -->

    <!-- Shoulder Buttons -->
    <bool name="config_gamepad_l1">true</bool>    <!-- Left Shoulder 1 -->
    <bool name="config_gamepad_r1">true</bool>    <!-- Right Shoulder 1 -->
    <bool name="config_gamepad_l2">true</bool>    <!-- Left Shoulder 2 -->
    <bool name="config_gamepad_r2">true</bool>    <!-- Right Shoulder 2 -->




    <!-- Should the left DPAD be replaced with an analog stick? -->
    <bool name="config_left_analog">false</bool>

    <!-- Show performance overlay (FPS, memory, CPU) -->
    <bool name="config_performance_overlay">true</bool>
    
    <!-- Shader configuration
        "disabled" = No shader applied
        "sharp" = Sharp bilinear filtering
        "crt" = CRT shader
        "lcd" = LCD shader
        "settings" = Allow user to select shader in menu-->
    <string name="config_shader">settings</string>

    <!-- Individual fake button visibility controls -->
    <bool name="config_show_fake_button_0">false</bool>    <!-- Socket 0 -->
    <bool name="config_show_fake_button_1">false</bool>    <!-- Socket 1 -->
    <bool name="config_show_fake_button_5">false</bool>    <!-- Socket 5 -->
    <bool name="config_show_fake_button_6">false</bool>    <!-- Socket 6 -->
    <bool name="config_show_fake_button_7">false</bool>    <!-- Socket 7 -->
    <bool name="config_show_fake_button_9">false</bool>    <!-- Socket 9 -->
    <bool name="config_show_fake_button_10">false</bool>   <!-- Socket 10 -->
    <bool name="config_show_fake_button_11">false</bool>   <!-- Socket 11 -->
</resources>
