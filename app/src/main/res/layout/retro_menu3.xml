<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="#CC000000"
    android:fitsSystemWindows="false">

    <!-- Fullscreen Menu Container -->
    <LinearLayout
        android:id="@+id/menu_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        android:paddingVertical="48dp">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/menu_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="24dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_gamepad_24"
                app:tint="#FFFFFF"
                android:contentDescription="@string/game_menu_icon" />

            <TextView
                android:id="@+id/menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/game_menu_title"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- Scrollable Content (only menu items) -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:fadeScrollbars="false">

                <!-- Menu Items Container - Scrollable -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                        <!-- Continue Game -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/menu_continue"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginVertical="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="#E7E0EC"
                            app:cardBackgroundColor="#FEFBFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="14dp">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_play_arrow_24"
                                    app:tint="#49454F"
                                    android:contentDescription="@string/menu_continue" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_continue"
                                        android:textSize="16sp"
                                        android:textColor="#1C1B1F" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_continue_description"
                                        android:textSize="12sp"
                                        android:textColor="#49454F" />

                                </LinearLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Reset Game -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/menu_reset"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginVertical="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="#E7E0EC"
                            app:cardBackgroundColor="#FEFBFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="14dp">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_reset_24"
                                    app:tint="#49454F"
                                    android:contentDescription="@string/menu_reset" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_reset"
                                        android:textSize="16sp"
                                        android:textColor="#1C1B1F" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_reset_description"
                                        android:textSize="12sp"
                                        android:textColor="#49454F" />

                                </LinearLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Save State -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/menu_save_state"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginVertical="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="#E7E0EC"
                            app:cardBackgroundColor="#FEFBFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="14dp">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_save_24"
                                    app:tint="#49454F"
                                    android:contentDescription="@string/menu_save_state" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_save_state"
                                        android:textSize="16sp"
                                        android:textColor="#1C1B1F" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_save_state_description"
                                        android:textSize="12sp"
                                        android:textColor="#49454F" />

                                </LinearLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Load State -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/menu_load_state"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginVertical="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="#E7E0EC"
                            app:cardBackgroundColor="#FEFBFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="14dp">

                                <ImageView
                                    android:id="@+id/load_state_icon"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_load_24"
                                    app:tint="#49454F"
                                    android:contentDescription="@string/menu_item_icon_description" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_load_state"
                                        android:textSize="16sp"
                                        android:textColor="#1C1B1F" />

                                    <TextView
                                        android:id="@+id/load_state_status"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/save_state_not_available"
                                        android:textSize="12sp"
                                        android:textColor="#49454F" />

                                </LinearLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Audio Toggle -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/menu_toggle_audio"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginVertical="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="#E7E0EC"
                            app:cardBackgroundColor="#FEFBFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="14dp">

                                <ImageView
                                    android:id="@+id/audio_toggle_icon"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_volume_up_24"
                                    app:tint="#49454F"
                                    android:contentDescription="@string/menu_item_icon_description" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/audio_toggle_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/audio_on"
                                        android:textSize="16sp"
                                        android:textColor="#1C1B1F" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_toggle_audio"
                                        android:textSize="12sp"
                                        android:textColor="#49454F" />

                                </LinearLayout>

                                <com.google.android.material.materialswitch.MaterialSwitch
                                    android:id="@+id/audio_switch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:clickable="false"
                                    android:focusable="false" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Fast Forward -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/menu_fast_forward"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginVertical="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="#E7E0EC"
                            app:cardBackgroundColor="#FEFBFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="14dp">

                                <ImageView
                                    android:id="@+id/fast_forward_icon"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_fast_forward_24"
                                    app:tint="#49454F"
                                    android:contentDescription="@string/menu_item_icon_description" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/fast_forward_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_fast_forward"
                                        android:textSize="16sp"
                                        android:textColor="#1C1B1F" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_fast_forward_description"
                                        android:textSize="12sp"
                                        android:textColor="#49454F" />

                                </LinearLayout>

                                <com.google.android.material.materialswitch.MaterialSwitch
                                    android:id="@+id/fast_forward_switch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:clickable="false"
                                    android:focusable="false" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Exit Game -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/menu_exit"
                            style="@style/Widget.Material3.CardView.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginVertical="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="#E7E0EC"
                            app:cardBackgroundColor="#FEFBFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="14dp">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_close_24"
                                    app:tint="#49454F"
                                    android:contentDescription="@string/menu_exit" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_exit"
                                        android:textSize="16sp"
                                        android:textColor="#1C1B1F" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/menu_exit_description"
                                        android:textSize="12sp"
                                        android:textColor="#49454F" />

                                </LinearLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

            </ScrollView>

    </LinearLayout>

</FrameLayout>
